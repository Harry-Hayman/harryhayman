---
import AppLayout from "@layouts/AppLayout.astro";
import { Image } from "astro:assets";
import TextBubbles from "@components/TextBubbles.astro";
import RadialDiagram from "@components/RadialDiagram.astro";
import hospitalityImage from "../assets/data/supporting images/A diverse group of professionals collaborating around a conference table, symbolizing the teamwork at Gemini Hospitality Consultants.png";
import jazzImage from "../assets/data/supporting images/A lively jazz band performing on stage in a cozy Philadelphia jazz club, capturing the essence of the Philadelphia Jazz Experience.png";
import veggieImage from "../assets/data/supporting images/Close-up of fresh microgreens being artfully plated by a chef in a modern kitchen, representing Veggie Graffiti's offerings.png";
import feedPhillyImage from "../assets/data/supporting images/Volunteers serving meals to diverse community members at an outdoor event, symbolizing the efforts of the Feed Philly Coalition, no person face visible.png";
---

<TextBubbles />
<AppLayout title="Ventures - Harry Hayman">
  <div class="py0 sm:py0">
    <div class="container mx-auto px">
      <!-- Radial Diagram -->
      <RadialDiagram />

      <!-- Header -->
      <header
        class="max-w-3xl mx-auto text-center mb-16"
        data-aos="fade-up"
        data-aos-duration="400"
        data-aos-distance="10px"
      >
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-serif font-bold mb-6 text-[rgb(var(--text-primary))]"
        >
          Ventures & Initiatives
        </h1>
        <p
          class="text-lg sm:text-xl text-[rgb(var(--text-primary))] leading-relaxed"
          data-aos="fade-up"
          data-aos-delay="200"
          data-aos-duration="300"
        >
          Exploring innovative solutions across hospitality, culture, and
          community development.
        </p>
      </header>

      <!-- Ventures Grid -->
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Gemini Hospitality -->
        <div
          data-aos="fade"
          data-aos-delay="0"
          class="group bg-[rgb(var(--card-bg))] rounded-2xl overflow-hidden border border-[rgb(var(--nav-border))] transition-transform duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64">
            <Image
              src={hospitalityImage}
              alt="Gemini Hospitality Consultants"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              width={800}
              height={600}
            />
          </div>
          <div class="p-8">
            <h2
              class="text-2xl font-serif font-bold mb-4 text-[rgb(var(--text-primary))]"
            >
              Gemini Hospitality Consultants
            </h2>
            <p class="text-[rgb(var(--text-primary))] mb-6">
              Strategic consulting services for restaurants and hospitality
              businesses, focusing on innovative solutions and sustainable
              growth.
            </p>
          </div>
        </div>

        <!-- Philadelphia Jazz Experience -->
        <div
          data-aos="fade"
          data-aos-delay="100"
          class="group bg-[rgb(var(--card-bg))] rounded-2xl overflow-hidden border border-[rgb(var(--nav-border))] transition-transform duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <Image
              src={jazzImage}
              alt="Philadelphia Jazz Experience"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              width={800}
              height={600}
            />
          </div>
          <div class="p-8">
            <h2
              class="text-2xl font-serif font-bold mb-4 text-[rgb(var(--text-primary))]"
            >
              Philadelphia Jazz Experience
            </h2>
            <p class="text-[rgb(var(--text-primary))] mb-6">
              Preserving and promoting Philadelphia's rich jazz heritage through
              education, performance, and community engagement.
            </p>
          </div>
        </div>

        <!-- Veggie Graffiti -->
        <div
          data-aos="fade"
          data-aos-delay="200"
          class="group bg-[rgb(var(--card-bg))] rounded-2xl overflow-hidden border border-[rgb(var(--nav-border))] transition-transform duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <Image
              src={veggieImage}
              alt="Veggie Graffiti"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              width={800}
              height={600}
            />
          </div>
          <div class="p-8">
            <h2
              class="text-2xl font-serif font-bold mb-4 text-[rgb(var(--text-primary))]"
            >
              Veggie Graffiti
            </h2>
            <p class="text-[rgb(var(--text-primary))] mb-6">
              Urban farming initiative combining hydroponic technology with
              sustainable practices to provide fresh, local produce.
            </p>
          </div>
        </div>

        <!-- Feed Philly Coalition -->
        <div
          data-aos="fade"
          data-aos-delay="300"
          class="group bg-[rgb(var(--card-bg))] rounded-2xl overflow-hidden border border-[rgb(var(--nav-border))] transition-transform duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <Image
              src={feedPhillyImage}
              alt="Feed Philly Coalition"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              width={800}
              height={600}
            />
          </div>
          <div class="p-8">
            <h2
              class="text-2xl font-serif font-bold mb-4 text-[rgb(var(--text-primary))]"
            >
              Feed Philly Coalition
            </h2>
            <p class="text-[rgb(var(--text-primary))] mb-6">
              Community initiative addressing food insecurity through
              partnerships with local restaurants and organizations.
            </p>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center mt-16">
        <h2
          class="text-2xl sm:text-3xl font-serif font-bold mb-4 text-[rgb(var(--text-primary))]"
        >
          Get Involved
        </h2>
        <p class="text-[rgb(var(--text-primary))] mb-8 max-w-2xl mx-auto">
          Interested in collaborating or learning more about our initiatives?
          Let's connect and explore opportunities together.
        </p>
        <a
          href="/blog"
          class="inline-block bg-purple-600 text-white px-8 py-4 rounded-lg hover:bg-purple-700 transition-colors"
        >
          Read Our Stories
        </a>
      </div>
    </div>
  </div>
</AppLayout>
