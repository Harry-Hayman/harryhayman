---
import AppLayout from "@layouts/AppLayout.astro";
import { Image } from "astro:assets";
import harryImage from "../assets/data/harryhayman images/Harry-Hayman.jpg";
---

<AppLayout title="Contact - Harry Hayman">
  <main class="relative">
    {/* Hero Section */}
    <div>
      <div class="container mx-auto px-4 pt-10 pb-12">
        <h1
          class="text-5xl font-serif font-bold text-center mb-4 text-[rgb(var(--text-primary))]"
        >
          Get in Touch
        </h1>
        <p
          class="text-xl text-center text-[rgb(var(--text-secondary))] max-w-2xl mx-auto"
        >
          Have a question or want to collaborate? I'd love to hear from you.
          Let's create something amazing together.
        </p>
      </div>
    </div>

    {/* Main Content */}
    <div class="container mx-auto px-4 py-6">
      <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-16">
        {/* Left Column - Image and Info */}
        <div class="space-y-8">
          <div class="relative group">
            <Image
              src={harryImage}
              alt="Harry Hayman"
              class="w-full h-[500px] object-cover rounded-xl shadow-lg transition-transform duration-300 group-hover:scale-[1.02]"
              width={600}
              height={500}
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            >
            </div>
          </div>

          <div class="space-y-6">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold text-[rgb(var(--text-primary))]">
                Contact Information
              </h2>
              <p class="text-[rgb(var(--text-secondary))]">
                Feel free to reach out through the form or connect with me on
                social media.
              </p>
            </div>

            <div class="flex justify-start gap-6">
              <a
                href="https://www.linkedin.com/in/harrisongrahamhaymaniv/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-[rgb(var(--text-primary))] hover:text-purple-600 transition-colors"
                aria-label="LinkedIn Profile"
              >
                <svg class="h-7 w-7" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://instagram.com/harryhayman"
                target="_blank"
                rel="noopener noreferrer"
                class="text-[rgb(var(--text-primary))] hover:text-purple-600 transition-colors"
                aria-label="Instagram Profile"
              >
                <svg class="h-7 w-7" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://twitter.com/harryhayman"
                target="_blank"
                rel="noopener noreferrer"
                class="text-[rgb(var(--text-primary))] hover:text-purple-600 transition-colors"
                aria-label="Twitter Profile"
              >
                <svg class="h-7 w-7" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        {/* Right Column - Contact Form */}
        <div>
          <form
            class="space-y-6"
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
          >
            <p class="hidden">
              <label>
                Don't fill this out if you're human: <input name="bot-field" />
              </label>
            </p>

            <div class="grid md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label
                  class="block text-sm font-medium text-[rgb(var(--text-primary))]"
                  for="name"
                >
                  Name <span class="text-purple-600">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-[rgb(var(--card-bg))] border border-[rgb(var(--nav-border))] text-[rgb(var(--text-primary))] focus:outline-none focus:ring-2 focus:ring-purple-600 transition-shadow"
                  placeholder="Your name"
                />
              </div>
              <div class="space-y-2">
                <label
                  class="block text-sm font-medium text-[rgb(var(--text-primary))]"
                  for="email"
                >
                  Email <span class="text-purple-600">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-[rgb(var(--card-bg))] border border-[rgb(var(--nav-border))] text-[rgb(var(--text-primary))] focus:outline-none focus:ring-2 focus:ring-purple-600 transition-shadow"
                  placeholder="your.email@example.com"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label
                class="block text-sm font-medium text-[rgb(var(--text-primary))]"
                for="subject"
              >
                Subject <span class="text-purple-600">*</span>
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-lg bg-[rgb(var(--card-bg))] border border-[rgb(var(--nav-border))] text-[rgb(var(--text-primary))] focus:outline-none focus:ring-2 focus:ring-purple-600 transition-shadow"
                placeholder="What's this about?"
              />
            </div>

            <div class="space-y-2">
              <label
                class="block text-sm font-medium text-[rgb(var(--text-primary))]"
                for="message"
              >
                Message <span class="text-purple-600">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-lg bg-[rgb(var(--card-bg))] border border-[rgb(var(--nav-border))] text-[rgb(var(--text-primary))] focus:outline-none focus:ring-2 focus:ring-purple-600 transition-shadow resize-none"
                placeholder="Your message here..."></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-8 py-4 bg-purple-600 text-white rounded-lg hover:bg-purple-700 active:bg-purple-800 transition-colors font-medium flex items-center justify-center gap-2 group"
            >
              Send Message
              <svg
                class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
</AppLayout>

<script>
  // Handle form submission and success message
  const form = document.querySelector('form[name="contact"]');
  const submitButton = form?.querySelector(
    'button[type="submit"]',
  ) as HTMLButtonElement | null;

  if (form && submitButton) {
    form.addEventListener("submit", () => {
      submitButton.innerHTML = `
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Sending...
      `;
      submitButton.disabled = true;
    });
  }
</script>
