---
import AppLayout from "@layouts/AppLayout.astro";
import { Image } from "astro:assets";
import PostCard from "@components/PostCard.astro";
import TextBubbles from "@components/TextBubbles.astro";
import authorImage from "../assets/data/harryhayman images/harryhayman_bg_removed.png";
import jazzImage from "../assets/data/homepage_images/playing_jazz_instrument.jpg";
import hospitalityImage from "../assets/data/homepage_images/hospitality.jpg";
import philanthropyImage from "../assets/data/homepage_images/donating_food_to_hungry.jpg";
import creativeImage from "../assets/data/homepage_images/creative_aspect.jpg";
import sustainabilityImage from "../assets/data/homepage_images/controlled_environmental_agriculture.jpg";
import scriptImage from "../assets/data/homepage_images/writing_script_movies.jpg";
import skylineImage from "../assets/data/homepage_images/looking_at_philadelphia_skyline.jpg";

const passions = [
  {
    title: "Jazz & Music",
    description:
      "Harry's love for jazz music blossomed during his early career as a bartender in a jazz club. This passion led him to establish the Philadelphia Jazz Experience, preserving the city's rich jazz heritage.",
    image: {
      src: jazzImage,
      alt: "Jazz Performance",
    },
  },
  {
    title: "Hospitality Innovation",
    description:
      "As a pioneer in Philadelphia's hospitality scene, Harry has transformed the industry through ventures like the Bynum Hospitality Group and Gemini Hospitality Consultants.",
    image: {
      src: hospitalityImage,
      alt: "Hospitality Innovation",
    },
  },
  {
    title: "Community Service",
    description:
      "Through initiatives like the Feed Philly Coalition, Harry demonstrates his deep commitment to community service, extending beyond food security to support arts, education, and local development.",
    image: {
      src: philanthropyImage,
      alt: "Community Service",
    },
  },
  {
    title: "Creative Innovation",
    description:
      "Harry's creative spirit drives innovative initiatives while promoting artistic expression through his social media handle @harryhayamancreative.",
    image: {
      src: creativeImage,
      alt: "Creative Innovation",
    },
  },
  {
    title: "Storytelling Through Film",
    description:
      "Through Another Three Hearts Experience, Harry transforms imaginative concepts into compelling narratives, contributing to Philadelphia's vibrant arts and entertainment scene.",
    image: {
      src: scriptImage,
      alt: "Script Writing",
    },
  },
  {
    title: "Environmental Innovation",
    description:
      "Through Veggie Graffiti and controlled environmental agriculture, Harry pioneers innovative solutions for urban farming and food security, working towards a more sustainable future for Philadelphia.",
    image: {
      src: sustainabilityImage,
      alt: "Environmental Innovation",
    },
  },
];
---

<TextBubbles />
<AppLayout title="Harry Hayman - Philadelphia Business Leader & Philanthropist">
  <div class="w-full overflow-x-hidden py-1 px-0">
    <!-- Hero Section -->
    <section class="min-h-[80vh] flex items-center -mt-4 sm:mt-0 relative">
      <div class="container mx-auto">
        <div class="grid lg:grid-cols-2 gap-8 md:gap-12 items-center w-full">
          <div class="order-2 lg:order-1 px-4">
            <h1
              class="text-3xl sm:text-5xl md:text-5xl lg:text-7xl font-serif font-bold mb-6 leading-tight text-[rgb(var(--text-primary))]"
              data-aos="fade-right"
            >
              Inspiring Change Through <span
                class="text-purple-600 inline-block hover:scale-105 transition-transform"
                >Innovation</span
              >
            </h1>
            <p
              class="text-base sm:text-lg md:text-xl text-[rgb(var(--text-primary))] leading-relaxed mb-8 max-w-lg"
              data-aos="fade-up"
              data-aos-delay="50"
            >
              From revolutionizing Philadelphia's hospitality scene to fostering
              community through jazz and sustainable initiatives.
            </p>
            <div
              class="flex flex-row gap-4"
              data-aos="fade-up"
              data-aos-delay="100"
              data-aos-offset="10"
            >
              <a
                href="/ventures"
                class="flex-1 sm:flex-none bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors text-center whitespace-nowrap"
              >
                Explore
              </a>
              <a
                href="/about"
                class="flex-1 sm:flex-none border border-[rgb(var(--nav-border))] bg-[rgb(var(--card-bg))] text-[rgb(var(--text-primary))] px-6 py-3 rounded-lg hover:bg-[rgb(var(--card-bg))] transition-colors text-center whitespace-nowrap"
              >
                Learn More
              </a>
            </div>
          </div>
          <div
            class="order-1 lg:order-2 flex justify-center lg:justify-end relative px-4"
            data-aos="fade-left"
          >
            <div
              class="relative w-[220px] h-[220px] xs:w-[280px] xs:h-[280px] sm:w-[320px] sm:h-[320px] md:w-[400px] md:h-[400px] lg:w-[550px] lg:h-[550px] hover:scale-105 transition-transform duration-500"
            >
              <div class="relative w-full h-full">
                <div
                  class="absolute -inset-4 xs:-inset-6 sm:-inset-8 md:-inset-12 lg:-inset-16"
                >
                  <svg viewBox="0 0 200 200" class="w-full h-full">
                    <defs>
                      <mask id="image-mask">
                        <path
                          fill="white"
                          d="M50.1,-51.5C62.8,-37.4,69.5,-18.7,71.8,2.3C74.1,23.4,72.1,46.7,59.4,62.2C46.7,77.7,23.4,85.2,0.9,84.4C-21.6,83.5,-43.2,74.1,-58.6,58.7C-74.1,43.2,-83.3,21.6,-82.6,0.7C-81.9,-20.1,-71.1,-40.3,-55.7,-54.3C-40.3,-68.3,-20.1,-76.2,-0.7,-75.5C18.7,-74.8,37.4,-65.5,50.1,-51.5Z"
                          transform="translate(100 100)"></path>
                      </mask>
                    </defs>
                    <path
                      fill="rgb(233, 215, 241)"
                      d="M50.1,-51.5C62.8,-37.4,69.5,-18.7,71.8,2.3C74.1,23.4,72.1,46.7,59.4,62.2C46.7,77.7,23.4,85.2,0.9,84.4C-21.6,83.5,-43.2,74.1,-58.6,58.7C-74.1,43.2,-83.3,21.6,-82.6,0.7C-81.9,-20.1,-71.1,-40.3,-55.7,-54.3C-40.3,-68.3,-20.1,-76.2,-0.7,-75.5C18.7,-74.8,37.4,-65.5,50.1,-51.5Z"
                      transform="translate(100 100)"></path>
                    <image
                      href={authorImage.src}
                      x="20"
                      y="30"
                      width="160"
                      height="160"
                      preserveAspectRatio="xMidYMid meet"
                      mask="url(#image-mask)"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Harry's Passions -->
    <section class="relative py-16 md:py-12">
      <div class="container mx-auto px-4">
        <h2
          class="text-3xl md:text-5xl font-serif text-center mb-16 text-[rgb(var(--text-primary))]"
        >
          Harry's Passions
        </h2>

        <div class="flex flex-col gap-8 mb-24">
          {
            passions.map((passion, index) => (
              <PostCard
                title={passion.title}
                description={passion.description}
                image={passion.image}
                index={index}
              />
            ))
          }
        </div>
      </div>
    </section>

    <!-- Vision for Philadelphia -->
    <section class="relative h-[40vh] sm:h-[60vh] overflow-hidden group">
      <div
        class="relative w-full h-full transform transition-transform duration-[2s] ease-out group-hover:scale-110"
      >
        <div
          class="absolute inset-0 w-full h-[120%] -top-[10%] motion-safe:animate-subtle-scroll"
        >
          <Image
            src={skylineImage}
            alt="Philadelphia Skyline"
            class="w-full h-full object-cover object-center brightness-75 transition-all duration-1000"
            width={1600}
            height={900}
          />
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-b from-purple-900/90 to-purple-900/60 transition-all duration-1000"
        >
        </div>
      </div>
      <div class="absolute inset-0 flex items-center">
        <div class="container mx-auto px-4 sm:px-6 py-4 sm:py-8 text-center">
          <div class="max-w-4xl mx-auto">
            <h2
              class="text-xl sm:text-4xl md:text-5xl font-serif font-bold mb-2 sm:mb-6 text-white drop-shadow-lg leading-tight"
            >
              Shaping Philadelphia's future, one step at a time.
            </h2>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-12 sm:py-16 md:py-20 text-center px-4">
      <h2
        class="text-2xl md:text-3xl font-serif mb-4 md:mb-6 text-[rgb(var(--text-primary))]"
      >
        Join the Movement
      </h2>
      <p
        class="text-lg md:text-xl text-[rgb(var(--text-primary))] mb-8 max-w-2xl mx-auto"
      >
        Whether you're passionate about arts, sustainability, or community
        development, there's a place for you in our initiatives.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/contact"
          class="w-full sm:w-auto bg-purple-600 text-white px-8 py-4 rounded-lg hover:bg-purple-700 transition-colors flex items-center justify-center gap-2 group"
        >
          Get in Touch
          <svg
            class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"
            />
          </svg>
        </a>
        <a
          href="/blog"
          class="w-full sm:w-auto border border-[rgb(var(--nav-border))] bg-[rgb(var(--card-bg))] text-[rgb(var(--text-primary))] px-8 py-4 rounded-lg hover:bg-[rgb(var(--card-bg))] transition-colors"
        >
          Read Our Stories
        </a>
      </div>
    </section>
  </div>

  <style>
    @keyframes subtle-scroll {
      from {
        transform: translateY(0);
      }
      to {
        transform: translateY(-10%);
      }
    }

    .motion-safe\:animate-subtle-scroll {
      animation: subtle-scroll 15s ease-in-out infinite alternate;
    }
  </style>
</AppLayout>
