---
import AppLayout from "@layouts/AppLayout.astro";
import { Image } from "astro:assets";
import authorImage from "../assets/data/harryhayman images/harryhayman_bg_removed.png";
import jazzImage from "../assets/data/supporting images/A lively jazz band performing on stage in a cozy Philadelphia jazz club, capturing the essence of the Philadelphia Jazz Experience.png";
import hospitalityImage from "../assets/data/supporting images/A chef crafting a gourmet dish in a contemporary kitchen, highlighting creativity in the culinary arts, no face visible.png";
import sustainabilityImage from "../assets/data/supporting images/An indoor vertical farm with lush green plants, showcasing innovative urban agriculture practices.png";
import communityImage from "../assets/data/supporting images/A vibrant mural depicting Philadelphia's cultural diversity, highlighting the city's rich artistic heritage, philadelphia city, america.png";
---

<AppLayout title="Harry Hayman - Philadelphia Business Leader & Philanthropist">
  <!-- Hero Section -->
  <div class="max-w-[100vw] overflow-x-hidden">
    <section class="min-h-[80vh] flex items-center -mt-4 sm:mt-0">
      <div class="grid lg:grid-cols-2 gap-8 md:gap-12 items-center w-full">
        <div class="order-2 lg:order-1 px-4">
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-6 leading-tight text-zinc-100">
            Inspiring Change Through
            <span class="text-purple-500">Innovation</span>
          </h1>
          <p class="text-base sm:text-lg md:text-xl text-zinc-400 leading-relaxed mb-8 max-w-lg">
            From revolutionizing Philadelphia's hospitality scene to fostering community through jazz and sustainable initiatives.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/ventures" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors">
              Explore Ventures
            </a>
            <a href="/about" class="border border-zinc-700 text-zinc-300 px-6 py-3 rounded-lg hover:bg-zinc-800 transition-colors">
              Learn More
            </a>
          </div>
        </div>
        <div class="order-1 lg:order-2 flex justify-center lg:justify-end relative px-4">
          <div class="relative w-[220px] h-[220px] xs:w-[280px] xs:h-[280px] sm:w-[320px] sm:h-[320px] md:w-[400px] md:h-[400px] lg:w-[450px] lg:h-[450px]">
            <!-- SVG Container -->
            <div class="relative w-full h-full">
              <!-- White Blob with Masked Image -->
              <div class="absolute -inset-4 xs:-inset-6 sm:-inset-8 md:-inset-12 lg:-inset-16">
                <svg viewBox="0 0 200 200" class="w-full h-full">
                  <defs>
                    <mask id="image-mask">
                      <path
                        fill="white"
                        d="M50.1,-51.5C62.8,-37.4,69.5,-18.7,71.8,2.3C74.1,23.4,72.1,46.7,59.4,62.2C46.7,77.7,23.4,85.2,0.9,84.4C-21.6,83.5,-43.2,74.1,-58.6,58.7C-74.1,43.2,-83.3,21.6,-82.6,0.7C-81.9,-20.1,-71.1,-40.3,-55.7,-54.3C-40.3,-68.3,-20.1,-76.2,-0.7,-75.5C18.7,-74.8,37.4,-65.5,50.1,-51.5Z"
                        transform="translate(100 100)"
                      />
                    </mask>
                  </defs>
                  <!-- Colored Background Blob -->
                  <path
                    fill="rgb(233, 215, 241)"
                    d="M50.1,-51.5C62.8,-37.4,69.5,-18.7,71.8,2.3C74.1,23.4,72.1,46.7,59.4,62.2C46.7,77.7,23.4,85.2,0.9,84.4C-21.6,83.5,-43.2,74.1,-58.6,58.7C-74.1,43.2,-83.3,21.6,-82.6,0.7C-81.9,-20.1,-71.1,-40.3,-55.7,-54.3C-40.3,-68.3,-20.1,-76.2,-0.7,-75.5C18.7,-74.8,37.4,-65.5,50.1,-51.5Z"
                    transform="translate(100 100)"
                  />
                  <!-- Masked Image -->
                  <image
                    href={authorImage.src}
                    x="20"
                    y="30"
                    width="160"
                    height="160"
                    preserveAspectRatio="xMidYMid meet"
                    mask="url(#image-mask)"
                  />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Areas of Impact -->
    <section class="py-12 sm:py-16 md:py-20 px-4">
      <h2 class="text-2xl md:text-3xl font-serif mb-8 md:mb-12 text-center text-zinc-100">Areas of Impact</h2>
      <div class="grid md:grid-cols-2 gap-6 md:gap-8">
        <!-- Jazz & Arts -->
        <div class="group relative overflow-hidden rounded-2xl">
          <Image
            src={jazzImage}
            alt="Philadelphia Jazz Experience"
            class="w-full h-64 md:h-80 object-cover transition-transform group-hover:scale-105"
            width={800}
            height={600}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 to-transparent p-6 md:p-8 flex flex-col justify-end">
            <h3 class="text-xl md:text-2xl font-serif mb-2 text-white">Philadelphia Jazz Experience</h3>
            <p class="text-sm md:text-base text-zinc-300">Preserving and celebrating Philadelphia's rich jazz heritage through education and performance.</p>
          </div>
        </div>

        <!-- Hospitality -->
        <div class="group relative overflow-hidden rounded-2xl">
          <Image
            src={hospitalityImage}
            alt="Hospitality Innovation"
            class="w-full h-64 md:h-80 object-cover transition-transform group-hover:scale-105"
            width={800}
            height={600}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 to-transparent p-6 md:p-8 flex flex-col justify-end">
            <h3 class="text-xl md:text-2xl font-serif mb-2 text-white">Culinary Innovation</h3>
            <p class="text-sm md:text-base text-zinc-300">Transforming Philadelphia's dining scene through creative concepts and sustainable practices.</p>
          </div>
        </div>

        <!-- Sustainability -->
        <div class="group relative overflow-hidden rounded-2xl">
          <Image
            src={sustainabilityImage}
            alt="Sustainable Agriculture"
            class="w-full h-64 md:h-80 object-cover transition-transform group-hover:scale-105"
            width={800}
            height={600}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 to-transparent p-6 md:p-8 flex flex-col justify-end">
            <h3 class="text-xl md:text-2xl font-serif mb-2 text-white">Sustainable Agriculture</h3>
            <p class="text-sm md:text-base text-zinc-300">Pioneering urban farming solutions with hydroponic technology and sustainable practices.</p>
          </div>
        </div>

        <!-- Community Impact -->
        <div class="group relative overflow-hidden rounded-2xl">
          <Image
            src={communityImage}
            alt="Community Impact"
            class="w-full h-64 md:h-80 object-cover transition-transform group-hover:scale-105"
            width={800}
            height={600}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 to-transparent p-6 md:p-8 flex flex-col justify-end">
            <h3 class="text-xl md:text-2xl font-serif mb-2 text-white">Community Impact</h3>
            <p class="text-sm md:text-base text-zinc-300">Building stronger communities through initiatives like Feed Philly Coalition and local art programs.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-12 sm:py-16 md:py-20 text-center px-4">
      <h2 class="text-2xl md:text-3xl font-serif mb-4 md:mb-6 text-zinc-100">Join the Movement</h2>
      <p class="text-lg md:text-xl text-zinc-400 mb-8 max-w-2xl mx-auto">
        Whether you're passionate about arts, sustainability, or community development,
        there's a place for you in our initiatives.
      </p>
      <a href="/blog" class="inline-block bg-purple-600 text-white px-8 py-4 rounded-lg hover:bg-purple-700 transition-colors">
        Read Our Stories
      </a>
    </section>
  </div>
</AppLayout>
