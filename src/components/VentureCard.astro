---
interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  website: string;
  linkedin: string;
  instagram: string;
  facebook: string;
  twitter: string;
}

import { Image } from "astro:assets";
const {
  title,
  description,
  image,
  website,
  linkedin,
  instagram,
  facebook,
  twitter,
} = Astro.props;
---

<div
  data-aos="fade"
  class="group bg-[rgb(var(--card-bg))] rounded-2xl overflow-hidden border border-[rgb(var(--nav-border))] transition-transform duration-300 hover:-translate-y-2"
>
  <div class="relative h-64 overflow-hidden">
    <Image
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
      width={600}
      height={450}
      format="avif"
      quality={45}
      loading="lazy"
      decoding="async"
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
    />
  </div>
  <div class="p-8">
    <h2
      class="text-2xl font-serif font-bold mb-4 text-[rgb(var(--text-primary))]"
    >
      {title}
    </h2>
    <p class="text-[rgb(var(--text-primary))] mb-6">
      {description}
    </p>
    <div class="flex space-x-4">
      <a
        href={website}
        target="_blank"
        class="text-[rgb(var(--text-primary))] hover:text-purple-600 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
