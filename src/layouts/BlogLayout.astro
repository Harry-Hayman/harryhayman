---
import AppLayout from "./AppLayout.astro";
import { Image } from "astro:assets";

const { data } = Astro.props;
const { title, description, pubDate, image, category } = data;

const formattedDate = pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<AppLayout title={title} description={description} ogImage={image}>
  <article class="py-12 sm:py-16 max-w-2xl mx-auto">
    <header class="mb-12">
      <div class="text-center">
        {
          category && (
            <span class="inline-block px-4 py-1 text-sm font-medium mb-4 rounded-full bg-purple-600 text-white">
              {category}
            </span>
          )
        }
        <h1
          class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-4 text-[rgb(var(--text-primary))]"
        >
          {title}
        </h1>
        <time
          class="text-[rgb(var(--text-secondary))]"
          datetime={pubDate.toISOString()}
        >
          {formattedDate}
        </time>
      </div>
      {
        image?.src && (
          <div class="mt-8 mx-auto">
            <Image
              src={image}
              alt={title}
              width={600}
              height={600}
              format="avif"
              quality={60}
              loading="eager"
              decoding="async"
              fetchpriority="high"
              class="w-auto h-auto max-w-full rounded-xl"
              sizes="(max-width: 640px) 100vw, (max-width: 768px) 600px, 600px"
            />
          </div>
        )
      }
    </header>
    <div class="prose prose-lg mx-auto max-w-xl">
      <div class="text-[rgb(var(--text-primary))]">
        <slot />
      </div>
    </div>
  </article>
</AppLayout>

<style is:global>
  .prose {
    max-width: 28ch;
    margin: 0 auto;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: rgb(var(--text-primary));
  }

  .prose p,
  .prose ul,
  .prose ol,
  .prose li {
    color: rgb(var(--text-primary));
  }

  .prose strong {
    color: rgb(var(--text-primary));
  }

  .prose a {
    color: rgb(var(--button-primary));
  }

  .prose blockquote {
    color: rgb(var(--text-primary));
    background-color: rgb(var(--card-bg));
    border-left-color: rgb(var(--button-primary));
  }

  .prose code {
    color: rgb(var(--text-primary));
    background-color: rgb(var(--card-bg));
  }

  .prose img {
    border-radius: 0.75rem;
    max-width: 600px;
    width: 100%;
    height: auto;
    object-fit: contain;
    margin: 1.5rem auto;
    display: block;
  }
  
  /* Ensure MDX images are also optimized */
  .prose picture {
    display: block;
    margin: 1.5rem auto;
  }
  
  .prose picture img {
    width: 100%;
    max-width: 600px;
  }
</style>
