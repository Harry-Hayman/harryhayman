<style is:global>
  .prose {
    max-width: 28ch;
    margin: 0 auto;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: rgb(var(--text-primary));
  }

  .prose p,
  .prose ul,
  .prose ol,
  .prose li {
    color: rgb(var(--text-primary));
  }

  .prose strong {
    color: rgb(var(--text-primary));
  }

  .prose a {
    color: rgb(var(--button-primary));
  }

  .prose blockquote {
    color: rgb(var(--text-primary));
    background-color: rgb(var(--card-bg));
    border-left-color: rgb(var(--button-primary));
  }

  .prose code {
    color: rgb(var(--text-primary));
    background-color: rgb(var(--card-bg));
  }

  .prose img {
    border-radius: 0.75rem;
    max-width: 525px !important;
    width: 100% !important;
    height: auto !important;
    object-fit: contain;
    margin: 1.5rem auto;
    display: block;
  }

  /* Ensure MDX images are also optimized */
  .prose picture {
    display: block;
    margin: 1.5rem auto;
    max-width: 525px;
  }

  .prose picture img {
    width: 100%;
    max-width: 525px;
  }
</style>
